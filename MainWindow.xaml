<Window x:Class="win_trace_cmd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:win_trace_cmd"
        mc:Ignorable="d"
        Title="win-trace-cmd" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ToggleButton x:Name="TraceButton" Content="Start Trace" Checked="OnStartTrace" Unchecked="OnStopTrace" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="EtlPathBox" MinWidth="300" Text="Optionally select where to store ETL file" TextChanged="OnEtlPathChanged" />
                <Button  x:Name="EtlPathButton" Content="Browse" Click="OnEtlPathButtonClick" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="WdatPathBox" MinWidth="300" Text="Optionally select where to store wdat file" TextChanged="OnWdatPathChanged" />
                <Button  x:Name="WdatPathButton" Content="Browse" Click="OnWdatPathButtonClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
